// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Modèle utilisateur avec rôles
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  address       String?
  city          String?
  postalCode    String?
  role          String    @default("CLIENT")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified DateTime?
  image         String?

  // Relations
  bookings          Booking[]
  notifications     Notification[]
  sessions          Session[]
  accounts          Account[]
  pushSubscriptions PushSubscription[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Types de services proposés
model Service {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String
  icon        String
  basePrice   Float
  unit        String   @default("heure")
  minDuration Int      @default(1)
  maxDuration Int?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  bookings       Booking[]
  priceOptions   PriceOption[]
  serviceOptions ServiceOption[]

  @@map("services")
}

// Options de prix pour les services
model PriceOption {
  id            String  @id @default(cuid())
  serviceId     String
  name          String
  description   String?
  priceModifier Float
  modifierType  String  @default("MULTIPLIER")
  isActive      Boolean @default(true)

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("price_options")
}

// Options supplémentaires pour les services
model ServiceOption {
  id          String  @id @default(cuid())
  serviceId   String
  name        String
  description String?
  price       Float
  isActive    Boolean @default(true)

  service        Service         @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  bookingOptions BookingOption[]

  @@map("service_options")
}

// Réservations
model Booking {
  id            String    @id @default(cuid())
  userId        String
  serviceId     String
  status        String    @default("PENDING")
  requestedDate DateTime
  requestedTime String
  duration      Int
  address       String
  city          String
  postalCode    String
  latitude      Float?
  longitude     Float?
  distance      Float?
  distanceFee   Float     @default(0)
  baseAmount    Float
  optionsAmount Float     @default(0)
  totalAmount   Float
  notes         String?
  adminNotes    String?
  googleEventId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  confirmedAt   DateTime?
  completedAt   DateTime?
  cancelledAt   DateTime?

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  service       Service         @relation(fields: [serviceId], references: [id])
  options       BookingOption[]
  notifications Notification[]

  @@map("bookings")
}

// Options sélectionnées pour une réservation
model BookingOption {
  id              String @id @default(cuid())
  bookingId       String
  serviceOptionId String
  price           Float

  booking       Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  serviceOption ServiceOption @relation(fields: [serviceOptionId], references: [id])

  @@map("booking_options")
}

// Notifications
model Notification {
  id        String   @id @default(cuid())
  userId    String
  bookingId String?
  type      String
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  booking Booking? @relation(fields: [bookingId], references: [id], onDelete: SetNull)

  @@map("notifications")
}

// Abonnements push pour les notifications
model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("push_subscriptions")
}

// Configuration globale
model Settings {
  id                    String    @id @default("settings")
  businessName          String    @default("Kiloutout Services")
  businessAddress       String    @default("1803 route de Toulouse")
  businessCity          String    @default("Escatalens")
  businessPostalCode    String    @default("82700")
  businessLatitude      Float     @default(43.9833)
  businessLongitude     Float     @default(1.2667)
  businessPhone         String?
  businessEmail         String?
  distanceThreshold     Float     @default(10)
  pricePerKm            Float     @default(0.50)
  googleCalendarId      String?
  googleAccessToken     String?
  googleRefreshToken    String?
  googleTokenExpiry     DateTime?
  defaultBookingBuffer  Int       @default(60)
  maxAdvanceBookingDays Int       @default(60)
  updatedAt             DateTime  @updatedAt

  @@map("settings")
}

// Disponibilités de la prestataire
model Availability {
  id        String  @id @default(cuid())
  dayOfWeek Int
  startTime String
  endTime   String
  isActive  Boolean @default(true)

  @@unique([dayOfWeek, startTime, endTime])
  @@map("availabilities")
}

// Jours d'indisponibilité
model UnavailableDate {
  id        String   @id @default(cuid())
  date      DateTime
  reason    String?
  createdAt DateTime @default(now())

  @@unique([date])
  @@map("unavailable_dates")
}
